<div class="row">
  <div class="large-6 columns small-centered">
  <% if (typeof message !== 'undefined' && message.length > 0) { %>
    <div data-alert class="alert-box alert">
      <%= message %>
      <a href="#" class="close">&times;</a>
    </div>
  <% } %>
    <div class="login-panel">
      <p class="welcome"><%= __('Please log in') %></p>
      <form role="form" action="/login" method="post">
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
        <div class="row collapse">
          <div class="small-2 columns">
            <span class="prefix"><i class="fa fa-envelope"></i></span>
          </div>
          <div class="small-10 columns">
            <input type="email" name="username" placeholder="email" required<% if (typeof username !== 'undefined') { %> value="<%= username %>"<% } %> />
          </div>
        </div>
        <div class="row collapse">
          <div class="small-2 columns">
            <span class="prefix"><i class="fa fa-lock"></i></span>
          </div>
          <div class="small-10 columns">
            <input type="password" name="password" placeholder="password" required />
          </div>
        </div>
        <div class="row collapse">
          <div class="small-10 columns small-centered text-center">
            <input type="submit" class="button" value="Log in" />
          </div>
        </div>
      </form>
      <div class="row collapse">
        <div class="small-10 columns small-centered text-center">
          <p>Don't have an account? <a href="/signup">Sign up here &raquo</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
